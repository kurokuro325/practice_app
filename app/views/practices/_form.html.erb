<%= form_with model: practice, local: true do |f|%>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, id:"practice_title" %>
  </div>

  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text, class: :form__text, id:"practice_text" %>
  </div>

<div class="field">
    <%= f.label :lure %><br />
    <%= f.collection_select(:lure_id, Lure.all, :id, :name, {}, {class:"lure-select"}) %>
    </div>

  <div class="field">
    <%= f.file_field :image %><br />
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>